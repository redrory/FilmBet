<body class="login">
	<div id="wrapper">  
		<div id="box">

		<a href="/"><h1>Filmbet</h1></a>  
			<h2>bet on which movies will make bank</h2>

			<div class="rule"></div>

			<% if current_user %>
			 	<div id ="welcome"><%= current_user.name %>, You have 10 points. </div>
			<% else %>
			
			<% redirect_to root_url %>	
			<% end %>

		<div id = "vote form">
			<%= simple_form_for @movie do |f| %>
				<ol>
					<li><%= f.input :movie_one, :placeholder => @firstMovie, :label => false %> </li>
					<li><%= f.input :movie_one, :placeholder => @secondMovie, :label => false %> </li>
					<li><%= f.input :movie_one, :placeholder => @thirdMovie, :label => false %> </li>
					<li><%= f.input :movie_one, :placeholder => @fourthMovie, :label => false %> 
					<%= f.submit :value => " GO " %>
					</ol>		
	  		<%end %>	
	  </div>
	 </div>

		<% if current_user %>
		<span class="num"><%= link_to "Signout", signout_path %></span>
		<% end %>

	</div>
</body>